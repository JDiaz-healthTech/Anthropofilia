{
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-mbstring": "*",
    "ext-json": "*",
    "ext-fileinfo": "*",
    "vlucas/phpdotenv": "^5.6",
    "ezyang/htmlpurifier": "^4.17"          
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "@composer dump-autoload -o"
    ],
    "post-update-cmd": [
      "@composer dump-autoload -o"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
